<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
      integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
      crossorigin="anonymous"
    />
    <title>Pack on Track</title>
  </head>
  <body>
    <!-- NAVBAR -->
    <div class="container-fluid">
      <nav
        class="d-flex flex-wrap justify-content-center align-items-center mt-5 mb-5 mx-4"
      >
        <!-- To "Home" -->
        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none"
        >
          <span class="text-uppercase text-muted fs-1 bg-white">Pack On Track</span>
        </a>

        <ul class="nav fs-4 text-muted">
          <li class="nav-item text-dark text-uppercase"><a
              href="/"
              class="nav-link activen text-dark text-muted"
              aria-current="page"
            >Home</a></li>
          {{#if logged_in}}
            <li class="nav-item text-uppercase"><a
                href="/dashboard"
                class="nav-link text-dark text-muted"
              >Dashboard</a></li>
            <li class="nav-item text-uppercase"><a
                href="/profile"
                class="nav-link text-dark text-muted"
              >Profile</a></li>
            <li class="nav-item text-uppercase"><a
                id="logout"
                href="#"
                class="nav-link text-dark text-muted"
              >Logout</a></li>
          {{else}}
            <li class="nav-item text-uppercase"><a
                href="/login"
                class="nav-link text-dark text-muted"
              >Login</a></li>
          {{/if}}
        </ul>
      </nav>
    </div>
    <main class="background">
      {{{body}}}
    </main>
    <!-- FOOTER -->
    <footer class="text-center text-lg-start bg-white text-muted">
      <section class="">
        <div class="container text-center text-md-start mt-5">
          <div class="row">
            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
            </div>
            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Useful Links</h6>
              <p><a href="/about-us" class="text-reset">
                  About us</a></p>
              <p><a href="/faq" class="text-reset">FAQ</a></p>
            </div>

            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Social Media</h6>
              <p><a
                  href="https://github.com/JenBerlin/Pack-On-Track"
                  target="_blank"
                  class="text-reset"
                ><i class="fab fa-github"></i></a></p>
              <p><a
                  href="https://www.facebook.com/"
                  target="_blank"
                  class="text-reset"
                ><i class="fab fa-facebook"></i></a></p>
              <p><a
                  href="https://www.instagram.com/"
                  target="_blank"
                  class="text-reset"
                ><i class="fab fa-instagram"></i></a></p>
              <!-- Repo Links needs to be added -->
            </div>

            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">
                Contact
              </h6>
              <p><a href="mailto:mail@mail.com"><i
                    class="far fa-envelope-open"
                  ></i></a>
                Berlin office: Example street 1<br />10117 Berlin/Germany</p>
              <p><a href="mailto:mail@mail.com"><i
                    class="far fa-envelope-open"
                  ></i></a>
                Prague office: Example street 1<br />110 00 Prague/Czech
                Republic</p>

            </div>
          </div>
        </div>
      </section>
    </footer>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>