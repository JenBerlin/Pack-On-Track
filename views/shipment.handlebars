<div class="row w-100 pt-5 pe-5">
  <div class="col"></div>

  <div class="col-8">
    <div class="card">
      <div class="card-body">
        <p class="text-uppercase fs-4 text-muted mb-5 fw-bold">{{title}}</p>

        <form>

          <div class="row">
            <p class="text-uppercase fs-4 text-muted mb-2">Shipment details</p>
            <div class="col-5 form-floating mb-5">
              <input type="trackingnumber" class="form-control mt-2 fw-bold fs-5" id="tracking-number"
                placeholder="tracking number" value="{{shipment.tracking_number}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="tracking-number">Tracking number</label>
            </div>
          </div>

          <div class="row">
            <p class="text-uppercase fs-4 text-muted mb-2">Shipment details</p>
            <div class="col-5 form-floating mb-5">
              <input type="trackingnumber" class="form-control" id="tracking-number" placeholder="tracking number"
                value="{{shipment.tracking_number}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="tracking-number">Tracking number</label>
            </div>

            <div class="col-3 form-floating mb-5">
              <select class="form-select text-uppercase text-muted text-center fs-5" id="courier-choice">
                {{#if shipment }}
                <option>Courier Service by ...</option>
                {{else}}
                <option selected>Courier Service by ...</option>
                {{/if}}

                {{#each couriers as |courier|}}
                <option value={{courier.id}} {{#if courier.isSelected}} selected {{/if}}>{{courier.courier_name}}
                </option>
                {{/each}}
              </select>
            </div>

            <div class="col-3 form-floating mb-5">
              <input type="date" class="form-control mt-2 fw-bold fs-5" id="date-arrival" placeholder="date-arrival"
                value="{{shipment.expected_arrival}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="date-arrival">Day of arrival</label>
            </div>
          </div>

          <div class="row">
            <p class="text-uppercase fs-4 text-muted mb-1">Order details</p>
            <div class="col-5 form-floating mb-2">
              <input type="orderDetails" class="form-control mt-2 fw-bold fs-5" id="order-from" placeholder="order-from"
                value="{{shipment.order_from}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="order-from">Ordered from ...</label>
            </div>

            <div class="col-3 form-floating mb-1">
              <input type="orderNumber" class="form-control mt-2 fw-bold fs-5" id="order-number"
                placeholder="order-number" value="{{shipment.order_number}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="order-number">Order number</label>
            </div>

            <div class="col-3 form-floating mb-1">
              <input type="date" class="form-control mt-2 fw-bold fs-5" id="order-made" placeholder="order-made"
                value="{{shipment.order_made}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="order-made">Order placed on ...</label>
            </div>
          </div>

          <div class="row">
            <div class="col-11 form-floating mb-5">
              <input type="description" class="form-control mt-2 fw-bold fs-5" id="description"
                placeholder="description" value="{{shipment.description}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="description">Order description (e.g. Shoes,
                Laptop, Present for Swapnil)</label>
            </div>
          </div>

          <div class="row">
            <p class="text-uppercase fs-4 text-muted mb-2">Shipment goes to the
              following address and receiver:</p>
            <div class="col-5 form-floating mb-4">
              <input type="keyword" class="form-control" id="keyword" placeholder="order-deteails"
                value="{{address.library_keyword}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="floatingInputGrid">Keyword</label>
            </div>
          </div>

          <div class="row">
            <p class="text-uppercase fs-4 text-muted mb-2">Shipment goes to the
              following address and receiver:</p>
            <div class="col-5 form-floating mb-4">
              <input type="orderDetails" class="form-control" id="library-keyword" placeholder="order-details"
                value="{{address.library_keyword}}" />
              <label class="text-uppercase text-muted fs-5 ms-3" for="floatingInputGrid">Keyword</label>
            </div>

            <div class="col-1 form-floating mb-4">
              <p class="text-uppercase text-muted fs-5 ms-4">OR</p>
            </div>

            <div class="col-3 form-floating mb-4">
              <a href="#" class="btn btn-lg btn-secondary text-uppercase">+
                Keyword / Address</a>
            </div>
          </div>

        </form>

        <div>
          {{#if isEdit}}
          <a href="#" id="edit-btn" class="btn btn-lg btn-secondary text-uppercase"><i class="far fa-edit"></i></a>
          {{else}}
          <a href="#" id="create-btn" class="btn btn-lg btn-secondary text-uppercase"><i class="far fa-save"></i></a>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>
<script src="/js/shipment.js"></script>